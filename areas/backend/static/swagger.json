    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "tags": [
    {
      "name": "UserRequest",
      "description": "API for cloud storage service"
    }
  ],
  "paths": {
    "/search": {
      "get": {
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "description": "File or directory to search for",
            "schema": {
              "type": "string"
            }
          }
        ],
        "tags": [
          "UserRequest"
        ],
        "summary": "Returns files and directories for user query",
        "responses": {
          "400": {
            "description": "Failed. Bad post data."
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/found_item"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "id": {
        "properties": {
          "uuid": {
            "type": "string"
          }
        }
      },
      "found_item": {
        "properties": {
          "name": {
            "type": "string"
          },
          "path": {
            "type": "string"
          }
        }
      }
    }
  }
}